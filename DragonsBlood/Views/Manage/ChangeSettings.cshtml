@model DragonsBlood.Models.UserSettingsModel

@{
    ViewBag.Title = "Change Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-sections">
    <div class="content-sections-heading">Change settings</div>
    <div class="content-sections-body">
        @using (Html.BeginForm("ChangeSettings","Manage",FormMethod.Post, new { @Id = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.InitialChatMessagesToDisplay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.InitialChatMessagesToDisplay, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InitialChatMessagesToDisplay, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShowMiniChat, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ShowMiniChat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShowMiniChat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ChatNameColor, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ChatNameColor, new {htmlAttributes = new {@class = "form-control", @type="text"}})
                        @Html.ValidationMessageFor(model => model.ChatNameColor, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div id="picker"></div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>