@model DragonsBlood.Models.Documents.Document

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-sections">
    <div class="content-sections-heading">Delete Document - @Model.DisplayText</div>
    <div class="content-sections-body">
        <h4>Are you sure you want to delete this?</h4>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DisplayText)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DisplayText)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Location)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Location)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <p class="btn-group">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default" })
                </p>
            }
        </div>
    </div>
</div>


