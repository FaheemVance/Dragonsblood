@model IEnumerable<DragonsBlood.Data.Allies.Alliance>

@{
    ViewBag.Title = "Alliances";
}

@if (User.IsInRole("Admin"))
{
    <div class="content-sections">
        <div class="content-sections-heading">Alliances</div>
        <div class="content-sections-body">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td class="link-host">
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
}
else
{
    <div class="content-sections">
        <div class="content-sections-heading">Alliances</div>
        <div class="content-sections-body">
            <p>These are all the alliances that we keep (Both Permenant and Temporary)</p>

            <ul>
                @foreach (var alliance in Model)
                {
                    <li>@alliance.Name (@alliance.State)</li>
                }
            </ul>
        </div>
    </div>

}