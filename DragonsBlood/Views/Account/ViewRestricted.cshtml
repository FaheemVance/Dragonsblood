@model IEnumerable<DragonsBlood.Models.Users.ApplicationUser>

@{
    ViewBag.Title = "View Restricted Users";
}

<div class="content-sections">
    <div class="content-sections-heading">View Restricted Users</div>
    <div class="content-sections-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Approve", "ApproveRestricted", new { id = item.Id })                   
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


